<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>


    </div>
    <div class="col-10">


      <%= form_with(model: @user,local: true)  do |formx| %>
      <div class="form-group">


      <p>
      <%= formx.label :username %>
      <%= formx.text_field :username ,class:"form-control",placeholder:"Username ... "%>
      </p>

      </div>
      <div class="form-group">


      <p>
       <%= formx.label :email %>
       <%= formx.email_field :email ,class:"form-control" ,placeholder:"Enter Your Email Address ..." %>
      </p>
      <p>
       <%= formx.label :password %>
       <%= formx.password_field :password ,class:"form-control" ,placeholder:"choos your password  ..." %>
      </p>
      </div>
      <div class="form-group row justify-content-center">

  <%= formx.submit (@user.new_record? ? "Signup" : "Update Account"),class:"btn btn-outline-dark btn-lg" %>
    
      </div>
      <% end %>

    </div>


  </div>

</div>
