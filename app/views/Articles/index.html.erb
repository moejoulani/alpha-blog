<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Articles Listing Page : </h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |item| %>
        <tr>
      <td>

        <%= item.title %>
      </td>
      <td>

      <%=  item.description %>
      </td>
      <td>
       <%= link_to 'Show' ,article_path(item.id),method: :get %>
       <%= link_to 'Delete' ,article_path(item.id),method: :delete %>
       <%= link_to 'Edit' ,edit_article_path(item)  %>
      </td>
        </tr>
      <% end %>

      </tbody>
    </table>
    <%= link_to "Create New Article" ,new_article_path%>
  </body>
</html>
